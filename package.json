{
  "name": "lab-guide",
  "displayName": "Lab Guide",
  "description": "Step-by-step lab guide panel with directional edge-glow arrows for hands-on training",
  "version": "0.6.3",
  "publisher": "ms-demoland",
  "license": "MIT",
  "icon": "media/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/ekuris-repos/MS-Demoland-Lab-Guide"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onUri",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "labGuide.startLab",
        "title": "Lab Guide: Start Lab"
      },
      {
        "command": "labGuide.nextStep",
        "title": "Lab Guide: Next Step"
      },
      {
        "command": "labGuide.prevStep",
        "title": "Lab Guide: Previous Step"
      },
      {
        "command": "labGuide.reset",
        "title": "Lab Guide: Reset Lab"
      },
      {
        "command": "labGuide.refreshBrowser",
        "title": "Lab Guide: Refresh Browser",
        "icon": "$(refresh)"
      },
      {
        "command": "labGuide.openSettings",
        "title": "Lab Guide: Open Settings"
      }
    ],
    "menus": {
      "webview/toolbar": [
        {
          "command": "labGuide.refreshBrowser",
          "when": "webviewId == 'labGuide.browser'",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "labGuide.nextStep",
        "key": "ctrl+shift+right",
        "mac": "cmd+shift+right"
      },
      {
        "command": "labGuide.prevStep",
        "key": "ctrl+shift+left",
        "mac": "cmd+shift+left"
      }
    ],
    "configuration": {
      "title": "Lab Guide",
      "properties": {
        "labGuide.profileActive": {
          "type": "boolean",
          "default": false,
          "description": "Set to true inside the Lab Guide profile â€” the extension will not activate without it"
        },
        "labGuide.catalogUrl": {
          "type": "string",
          "default": "https://ekuris-repos.github.io/MS-Demoland/",
          "description": "URL of the course catalog page to open on startup"
        },
        "labGuide.autoActions": {
          "type": "boolean",
          "default": true,
          "description": "Automatically execute step actions (open files, terminal, chat) when advancing slides"
        },
        "labGuide.showTips": {
          "type": "boolean",
          "default": true,
          "description": "Show tip callouts in the guide panel"
        },
        "labGuide.enforceStepCompletion": {
          "type": "boolean",
          "default": true,
          "description": "Require sub-step completion before advancing to the next slide"
        },
        "labGuide.showNotes": {
          "type": "boolean",
          "default": true,
          "description": "Show speaker notes below each slide by default"
        },
        "labGuide.followVSCodeMotion": {
          "type": "boolean",
          "default": true,
          "description": "Respect VS Code's Reduce Motion setting to disable animations (edge glows, arrows, opening animation)"
        },
        "labGuide.followVSCodeAccessibility": {
          "type": "boolean",
          "default": true,
          "description": "Respect VS Code's accessibility settings for screen readers and high contrast themes"
        }
      }
    }
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "package": "tsc && npx @vscode/vsce package --out releases/"
  },
  "devDependencies": {
    "@types/node": "^25.3.0",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.3.0"
  }
}
